{
  "compilerOptions": {
    "lib": ["ES2015"],
    "target": "ES2015",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "Node",
    "isolatedModules": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "webpack",
    "bin",
    "utils"
  ]
}